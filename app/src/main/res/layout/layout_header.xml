<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tvSrNumber"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:minWidth="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/tvItem"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="1"
        android:background="#F2F4F7"
        android:text="No"/>

    <TextView
        android:id="@+id/tvItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/tvSrNumber"
        app:layout_constraintStart_toEndOf="@+id/tvSrNumber"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Chicken Sandwich"
        android:minWidth="100dp"
        android:text="Item"/>

    <TextView
        android:id="@+id/tvItemQuantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/tvItemEach"
        app:layout_constraintStart_toEndOf="@+id/tvItem"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Chicken Sandwich"
        android:minWidth="50dp"
        android:text="Qty"/>

    <TextView
        android:id="@+id/tvItemEach"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Each"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/tvItemTotal"
        app:layout_constraintStart_toEndOf="@+id/tvItemQuantity"
        app:layout_constraintTop_toTopOf="parent"
        android:minWidth="50dp"
        />

    <TextView
        android:id="@+id/tvItemTotal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:minWidth="50dp"
        android:text="Total"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tvItemEach"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>